{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Object Schema",
    "type": "object",
    "required": [
        "id",
        "bbox",
        "class_name"
    ],
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 0
        },
        "bbox": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 4,
            "maxItems": 4,
            "description": "Bounding box coordinates [x1, y1, x2, y2]"
        },
        "class_name": {
            "type": "string"
        },
        "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "caption": {
            "type": "string",
            "description": "Natural language description of the object"
        },
        "attributes": {
            "type": "object",
            "properties": {
                "colors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "emotion": {
                    "type": "string"
                },
                "clothing": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "pose": {
                    "type": "string"
                },
                "age": {
                    "type": "string"
                },
                "gender": {
                    "type": "string"
                }
            }
        }
    }
}