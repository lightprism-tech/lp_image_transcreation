{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scene Perception Schema",
  "type": "object",
  "required": [
    "metadata",
    "image_type",
    "scene",
    "objects",
    "text"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "image_path": {
          "type": "string"
        },
        "image_name": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "pipeline_version": {
          "type": "string"
        }
      },
      "required": [
        "image_path",
        "timestamp"
      ]
    },
    "image_type": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ad",
            "poster",
            "ui",
            "product",
            "social_media",
            "document",
            "other"
          ]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "scene": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "setting": {
          "type": "string"
        },
        "mood": {
          "type": "string"
        },
        "activity": {
          "type": "string"
        },
        "confidence": {
          "type": "number"
        }
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "$ref": "object_schema.json"
      }
    },
    "text": {
      "type": "object",
      "properties": {
        "regions": {
          "type": "array"
        },
        "extracted": {
          "type": "array"
        },
        "full_text": {
          "type": "string"
        }
      }
    }
  }
}